<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    tools:context="com.example.tolavio.curta.FaleConnosco">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fale Connosco"
            android:textColor="@color/white"
            android:paddingLeft="20dp"
            android:paddingTop="30dp"
            android:textSize="30dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nome_fale_connosco"
            android:hint="Nome Completo"
            android:textColorHint="@color/gray_700"
            android:textColor="@color/white"
            android:paddingLeft="20dp"
            android:paddingTop="40dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email_fale_connosco"
            android:hint="Seu e-mail"
            android:textColorHint="@color/gray_700"
            android:textColor="@color/white"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mensagem_fale_connosco"
            android:hint="Mensagem..."
            android:textColorHint="@color/gray_700"
            android:textColor="@color/white"
            android:inputType="textPersonName"
            android:layout_marginTop="25dp"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"/>

        <Button
            android:layout_width="107dp"
            android:layout_height="33dp"
            android:id="@+id/enviar_fale_connosco"
            android:text="Enviar"
            android:textColor="@color/white"
            android:background="@color/colorAccent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_horizontal"/>



    </LinearLayout>

</android.support.constraint.ConstraintLayout>
